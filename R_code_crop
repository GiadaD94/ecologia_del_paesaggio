clb <- colorRampPalette(c('dark blue','blue','light blue'))(100) # 
plot(snow.multitemp,col=clb)

# zoom
snow.multitemp

plot(snow.multitemp$snow2010r, col=clb)

extension <- c(6, 20, 35, 50)
zoom(snow.multitemp$snow2010r, ext=extension)

plot(snow.multitemp$snow2010r, col=clb)
